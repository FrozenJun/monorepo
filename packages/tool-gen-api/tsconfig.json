{
  "compilerOptions": {
    "composite": true,
    "target": "ES2017",
    "strict": false,
    "module": "commonjs",
    "importHelpers": true,

    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vitest/importMeta"],
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
